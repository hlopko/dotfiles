[ui]
username = hlopko
merge = nvimdiff

[merge-tools]
nvimdiff.executable = nvim
nvimdiff.args = -d $base $local $output $other +close +close
nvimdiff.premerge = keep

[alias]
borrow = !p4 pack -c $1 | sed "/^\t/s/\t//p ; /^====.*====\$/,\$p ; d" | $HG import -e - -p0

[trainingwheels]
revert--all=false
merge=false

[extensions]
purge =
churn =

[pager]
ignore = version, log, status

[experimental]
allowdivergence=True
