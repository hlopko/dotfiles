#!/bin/bash

set -euo pipefail

cd ~/projects/swift/swift

mkdir -p ../build

flag="_"
if [[ "$#" > 0 ]]; then
flag="${1}"
shift
fi

if [[ "${flag}" == "-d" ]]; then
  echo "[BUILD-SWIFT]: Debug build"
  ln -nfs Ninja-RelWithDebInfoAssert+swift-DebugAssert ../build/current

  ./utils/build-script \
    --release-debuginfo \
    --debug-swift \
    --force-optimized-typechecker \
    --extra-cmake-options="-DSWIFT_ENABLE_LLD_LINKER,-DCMAKE_CXX_FLAGS=-fno-limit-debug-info,-DCMAKE_C_FLAGS=-fno-limit-debug-info" \
    --cmake-c-launcher $(which ccache) \
    --cmake-cxx-launcher $(which ccache) \
    $@
else
  echo "[BUILD-SWIFT]: Release build"
  ln -nfs Ninja-ReleaseAssert ../build/current

  ./utils/build-script \
    --release \
    --extra-cmake-options="-DSWIFT_ENABLE_LLD_LINKER=1" \
    --cmake-c-launcher $(which ccache) \
    --cmake-cxx-launcher $(which ccache) \
    $@
fi
