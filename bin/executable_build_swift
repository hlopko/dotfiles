#!/bin/bash

set -euo pipefail

cd ~/projects/swift/swift

mkdir -p ../build

flag="_"
if [[ "$#" > 0 ]]; then
flag="${1}"
shift
fi

if [[ "${flag}" == "-d" ]]; then
  echo "[BUILD-SWIFT]: Debug build"
  ln -nfs Ninja-RelWithDebInfoAssert ../build/current

  ./utils/build-script \
    --release-debuginfo \
    --force-optimized-typechecker \
    --extra-cmake-options="-DSWIFT_APPEND_VC_REV=Off,-DLLVM_APPEND_VC_REV=Off,-DLLVM_USE_LINKER=lld,-DCMAKE_CXX_FLAGS='-fno-limit-debug-info -fstandalone-debug -glldb',-DCMAKE_C_FLAGS='-fno-limit-debug-info -fstandalone-debug -glldb',-DCMAKE_BUILD_TYPE=Debug,-DLLVM_USE_SPLIT_DWARF:BOOL=true,-DLLVM_OPTIMIZED_TABLEGEN=ON" \
    $@
else
  echo "[BUILD-SWIFT]: Release build"
  ln -nfs Ninja-ReleaseAssert ../build/current

  ./utils/build-script \
    --release \
    --extra-cmake-options="-DSWIFT_APPEND_VC_REV=Off,-DLLVM_APPEND_VC_REV=Off,-DLLVM_USE_LINKER=lld" \
    $@
fi
